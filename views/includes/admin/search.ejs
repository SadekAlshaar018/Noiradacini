<div class="filter-panel">

      <div id="filter-panel" class="collapse filter-panel">
          <div class="panel panel-default">
              <div class="panel-body">

                  <form class="form-inline" id="searchForm" data-type="page" action="/admin/pages">
                      <input type="hidden" id="searchField" name="onField" value="title">
                      <div class="input-group">
                          <div class="input-group-btn">
                              <a class="btn btn-search btn-default dropdown-toggle" data-toggle="dropdown">
                                  <span class="label-icon">
                                      <span class="glyphicon glyphicon-search"></span>
                                      Search By Page Title
                                  </span>
                                  <span class="caret"></span>
                              </a>
                              <ul class="dropdown-menu pull-left" role="menu">
                                  <li>
                                      <a href="#" data-field="title">
                                          <span class="label-icon">
                                              <span class="glyphicon glyphicon-search"></span>
                                              Search By Page Title
                                          </span>
                                      </a>
                                  </li>
                                  <li>
                                      <a href="#" data-field="content">
                                          <span class="label-icon">
                                              <span class="glyphicon glyphicon-book"></span>
                                              Search By Page Content
                                          </span>
                                      </a>
                                  </li>
                              </ul>
                          </div>
                          <input type="text" name="search" class="form-control">
