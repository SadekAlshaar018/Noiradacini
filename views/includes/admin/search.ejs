                              <option value="nl">Dutch</option>
                              <option value="ro">Romainian</option>
                          </select>
                      </div> <!-- form group [order by] -->
                      <div class="form-group">
                          <a class="btn btn-default filter-col" id="reset-filter" data-type="page">
                              <span class="glyphicon glyphicon-record"></span> Reset
                          </a>
                      </div>
                  </form>
              </div>
          </div>
      </div>
      <a class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#filter-panel">
          <span class="glyphicon glyphicon-filter"></span> Filter & Search
      </a>
</div>
